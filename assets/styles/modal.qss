/* assets/styles/modal.qss */

#modal {
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 20px;
}

#modal QLabel {
    font-size: 16px;
    margin-bottom: 10px;
}

#modal QPushButton {
    float: right;
    background-color: #dc3545;
}

#modal QPushButton:hover {
    background-color: #c82333;
}
